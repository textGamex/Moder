<UserControl
    x:Class="Moder.Core.Views.Menus.MainControlView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:menus="clr-namespace:Moder.Core.ViewsModel.Menus"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="menus:MainControlViewModel"
    mc:Ignorable="d">
    <Grid RowDefinitions="*,Auto">
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*">
            <ContentControl x:Name="SideBarControl" Grid.Column="0" />
            <ContentControl x:Name="WorkSpaceControl" Grid.Column="1" />
        </Grid>

        <ContentControl x:Name="StatusBarControl" Grid.Row="1" />
    </Grid>
</UserControl>
